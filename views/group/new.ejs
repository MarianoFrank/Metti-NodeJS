<main class="contenedor contenedor-formularios no-padding">
  <h1><%= pageName %></h1>

  <form action="/new-group" class="default-form editorjs-form" method="post">
    <div class="campo">
      <label for="name">Nombre</label>
      <input type="text" name="name" id="name" placeholder="Nombre del grupo" />
    </div>
    <div class="campo editorjs">
      <label for="descripcion">Descripcion</label>
      <div id="editorjs"></div>
      <input type="hidden" name="descripcion" id="descripcion" />
    </div>
    <div class="campo">
      <input type="submit" class="btn btn-amarillo" />
    </div>
  </form>
</main>
