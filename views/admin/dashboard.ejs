<main class="contenedor panel-administracion">
  <h1><%= pageName %></h1>
  <div class="contenedor-botones">
    <a href="/new-group" class="btn btn-amarillo">Nuevo Grupo</a>
    <a href="/new-meeti" class="btn btn-azul">Nuevo Metti</a>
    <a href="/edit-profile" class="btn btn-rosa">Editar Perfil</a>
    <a href="/img-profile" class="btn btn-rosa">Imagen Perfil</a>
  </div>

  <div class="seccion-admin">
    <h2>Tus eventos</h2>
    <ul>
      <li>
        <div class="informacion-admin">
          <p class="fecha">Lunues</p>
          <h3>Ecommerce</h3>
          <small>23 asistentes</small>
        </div>
        <div class="acciones contenedor-botones">
          <a href="/edit-meeti" class="btn btn-verde">Editar</a>
          <a href="" class="btn btn-azul2">Asistentes</a
          ><a href="" class="btn btn-rojo">Eliminar</a>
        </div>
      </li>
    </ul>
  </div>

  <div class="seccion-admin">
    <% if(grupos.length > 0){ %>
    <h2>Tus Grupos</h2>
    <ul>
      <% grupos.forEach(grupo =>{ %>
      <li>
        <div class="informacion-admin">
          <h3><%= grupo.name %></h3>
        </div>
        <div class="acciones contenedor-botones">
          <a href="/edit-group/<%= grupo.id %>" class="btn btn-verde">Editar</a>
          <button data-group-id="<%= grupo.id %>" class="btn btn-rojo" id="deleteGroup">
            Eliminar
          </button>
        </div>
      </li>
      <%}) %>
    </ul>
    <% } else{ %>
    <p>No tiene grupos, crea uno.</p>
    <% } %>
  </div>
</main>
