<main class="contenedor contenedor-formularios">
    <h1><%- pageName %></h1>
    <form class="default-form" method="POST">
      <legend>Sobre el Meeti</legend>
      <div class="campo">
        <label>Grupo</label>
        <select name="grupoId">
          <option value="" disabled>-- Selecciona Grupo --</option>
          <% grupos.forEach(grupo => { %>
          <option value="<%- grupo.id  %>" <%- grupo.id === meeti.GrupoId ? "selected" : "" %> ><%- grupo.name %></option>
          <% }); %>
        </select>
      </div>
      <div class="campo">
        <label>Titulo</label>
        <input type="text" name="titulo" placeholder="Titulo Meeti" value="<%- meeti.titulo %>"/>
      </div>
      <div class="campo">
        <label>Invitado</label>
        <input
          type="text"
          name="invitado"
          placeholder="Nombre Invitado o Ponente (si aplica)"
          value="<%- meeti.invitado %>"
        />
      </div>
      <div class="columnas-2 grid">
        <div class="campo">
          <label>Fecha</label>
          <input type="date" name="fecha" placeholder="Fecha Meeti" value="<%- meeti.fecha %>"/>
        </div>
        <div class="campo">
          <label>Hora</label>
          <input type="time" name="hora" placeholder="Hora Meeti" value="<%- meeti.hora %>"/>
        </div>
      </div>
      <div class="campo">
        <label>Cupo</label>
        <input
          type="number"
          min="1"
          name="cupo"
          placeholder="Cupo Meeti (si aplica)"
          value="<%- meeti.cupo %>"
        />
      </div>
      <div class="campo descripcion">
        <label>Descripción</label>
        <div class="contenedor-editor">
          <input type="hidden" id="x" name="descripcion" value="<%- meeti.descripcion %>"/>
          <trix-editor input="x"></trix-editor>
        </div>
      </div>
  
      <legend>Ubicación Meeti</legend>
      <div class="campo buscador">
        <label>Dirección del Meeti</label>
        <div class="contenedor-input">
          <input
            type="text"
            id="busqueda"
            placeholder="Coloca la direccio del Meeti"
          />
          <ul class="resultados-busqueda" style="display: none"></ul>
          <small
            >El asistente colocará una dirección estimada
            <span class="loader"></span>
          </small>
        </div>
      </div>
      <div class="campo mapa">
        <div id="mapa"></div>
        <p class="informacion">
          Mueve el pin al puto exacto en caso de ser necesario
        </p>
      </div>
      <p class="informacion">
        Confirma que los siguientes campos sean correctos:
      </p>
      <div class="campo">
        <label>Dirección</label>
        <input
          type="text"
          id="direccion"
          name="direccion"
          placeholder="Dirección"
          disabled readonly
        />
      </div>
      <div class="campo">
        <label>Ciudad</label>
        <input
          type="text"
          id="ciudad"
          name="ciudad"
          placeholder="Ciudad"
          disabled readonly
        />
      </div>
      <div class="campo">
        <label>Estado</label>
        <input
          type="text"
          id="estado"
          name="estado"
          placeholder="Estado"
          disabled readonly
        />
      </div>
      <div class="campo">
        <label>País</label>
        <input type="text" id="pais" name="pais" placeholder="País" disabled readonly />
      </div>
      <input type="hidden" name="coordenadas" value="<%= JSON.stringify(meeti.coordenadas.coordinates)  %>" id="coordenadas" />
      <div class="campo enviar">
        <input type="submit" class="btn btn-rosa" value="Guardar Meeti" />
      </div>
    </form>
  </main>
  